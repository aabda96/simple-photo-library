					<div class="form-group">
						<label>Titre</label>
						<input class="form-control" type="text" name="albumTitle", placeholder="Titre de votre nouvel album" autofocus required>
					</div>
					<button class="btn btn-primary" type="submit">Cr√©er</button>
				</form>
			</div>
		</div>
	</div>

	<%- include('partials/scripts') %>
